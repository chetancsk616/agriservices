{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "gunicorn app:app",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "cron": [
      {
        "schedule": "30 3 * * *",
        "command": "railway resume"
      },
      {
        "schedule": "30 15 * * *",
        "command": "railway pause"
      }
    ]
  }
}
